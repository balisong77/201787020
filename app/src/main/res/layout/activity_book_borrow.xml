<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac"
    tools:context=".Book_borrow">

    <Button
        android:id="@+id/book_borrow_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_shape_orange"
        android:text="确认租借"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myspin" />

    <Spinner
        android:id="@+id/myspin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:dropDownVerticalOffset="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_borrow" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_shape_green"
        android:gravity="center_horizontal"
        android:text="信息确认"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_Book_borrow" />

    <TextView
        android:id="@+id/book_borrow_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="租借书籍："
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/book_borrow_lender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="租借人姓名："
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/book_borrow_number"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/book_borrow_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="租借人学号："
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/book_borrow_name"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView_borrow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_shape_green"
        android:gravity="center_horizontal"
        android:text="租借时间"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_borrow_lender" />

    <View
        android:id="@+id/line_borrowR"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/xuxian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/title_Book_borrow">

    </View>

    <View
        android:id="@+id/line_borrowL"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/xuxian"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/title_Book_borrow"></View>

    <View
        android:id="@+id/line_borrowR2"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/xuxian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/book_borrow_lender">

    </View>

    <View
        android:id="@+id/line_borrowL2"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/xuxian"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/book_borrow_lender"></View>

    <com.example.hint.Title_layout
        android:id="@+id/title_Book_borrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>