<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs"
        android:background="@drawable/button_shape_white"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/ima_allbook"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/wuli"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/allbook_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书名"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="@+id/ima_allbook"
            app:layout_constraintStart_toStartOf="@+id/ima_allbook"
            app:layout_constraintTop_toBottomOf="@+id/ima_allbook" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/allbook_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_green"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:text="状态"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/cs" />


</androidx.constraintlayout.widget.ConstraintLayout>